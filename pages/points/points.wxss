.points-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 积分卡片 */
.points-card {
  margin: 30rpx;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.points-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.1;
  background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="40" fill="white"/></svg>');
  background-size: 200rpx;
}

.points-content {
  position: relative;
  padding: 40rpx;
  color: #fff;
}

.points-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-level {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.level-badge {
  background-color: rgba(255, 255, 255, 0.3);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.level-text {
  font-size: 24rpx;
  opacity: 0.9;
}

.points-amount {
  margin-bottom: 30rpx;
}

.points-label {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 10rpx;
}

.points-value {
  font-size: 72rpx;
  font-weight: bold;
  display: block;
}

.points-stats {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

/* 功能入口 */
.function-section {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.function-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.function-icon {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #f5f3ff 0%, #ede9fe 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.function-icon image {
  width: 60rpx;
  height: 60rpx;
}

.function-content {
  flex: 1;
}

.function-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.function-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.function-rule {
  font-size: 22rpx;
  color: #8b5cf6;
  background-color: #f5f3ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.function-arrow {
  font-size: 40rpx;
  color: #ccc;
  margin-left: 20rpx;
}

/* 规则说明 */
.rules-section {
  padding: 0 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.rule-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.rule-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.rule-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
}

.rule-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.rule-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
}

.rule-points {
  font-size: 26rpx;
  color: #8b5cf6;
  font-weight: bold;
}

.level-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.level-item:last-child {
  border-bottom: none;
}

.level-info {
  display: flex;
  flex-direction: column;
}

.level-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.level-requirement {
  font-size: 22rpx;
  color: #999;
}

.level-privilege {
  font-size: 24rpx;
  color: #8b5cf6;
}

/* 积分记录链接 */
.history-link {
  margin: 30rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #8b5cf6;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
}

.arrow {
  font-size: 28rpx;
}

.bottom-placeholder {
  height: 100rpx;
}
