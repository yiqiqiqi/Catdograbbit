/* pages/my/my.wxss */
.container {
  min-height: 100vh;
  padding: 20rpx 20rpx 40rpx;
  background-color: #f0efff;
}

/* 用户头部 */
.user-header {
  background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 4rpx 15rpx rgba(139, 92, 246, 0.15);
  color: white;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.1);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: 700;
  color: white;
}

.user-phone {
  font-size: 22rpx;
  opacity: 0.8;
  color: white;
}

.user-action {
  flex-shrink: 0;
}

.edit-btn {
  background: rgba(255, 255, 255, 0.25);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 12rpx;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.edit-btn:active {
  background: rgba(255, 255, 255, 0.35);
}

/* 等级和陪伴卡片 */
.level-companion-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(139, 92, 246, 0.08);
  border: 2rpx solid #f3e8ff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  text-align: center;
}

.stat-label {
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 500;
}

.level-display,
.days-display,
.points-display {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  justify-content: center;
}

.level-badge {
  font-size: 32rpx;
  font-weight: 700;
  color: #8b5cf6;
}

.level-tip {
  font-size: 18rpx;
  color: #9ca3af;
  font-weight: 500;
}

.days-number,
.points-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #8b5cf6;
}

.days-unit,
.points-unit {
  font-size: 18rpx;
  color: #9ca3af;
  font-weight: 500;
}

.divider {
  width: 1rpx;
  height: 60rpx;
  background: #f3e8ff;
  flex-shrink: 0;
}

/* 我的宠物 */
.pets-section {
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 10rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #4c1d95;
}

.add-btn {
  background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: scale(0.95);
}

.pets-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.pet-item {
  background: white;
  border-radius: 12rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(139, 92, 246, 0.08);
  border: 2rpx solid #f3e8ff;
  display: flex;
  align-items: center;
  gap: 16rpx;
  transition: all 0.3s ease;
}

.pet-item:active {
  transform: translateX(4rpx);
  box-shadow: 0 2rpx 12rpx rgba(139, 92, 246, 0.15);
}

.pet-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
  background: #f3e8ff;
  object-fit: cover;
}

.pet-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.pet-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #2d1b4e;
}

.pet-breed {
  font-size: 20rpx;
  color: #9ca3af;
}

.pet-item-action {
  color: #d1d5db;
  font-size: 24rpx;
  font-weight: 300;
}

.empty-pets {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx 16rpx;
  text-align: center;
  border: 2rpx solid #f3e8ff;
}

.empty-text {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 功能菜单 */
.function-section {
  margin-bottom: 24rpx;
}

.menu-item {
  background: white;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(139, 92, 246, 0.08);
  border: 2rpx solid #f3e8ff;
  display: flex;
  align-items: center;
  gap: 16rpx;
  transition: all 0.3s ease;
}

.menu-item:active {
  transform: translateX(4rpx);
  box-shadow: 0 2rpx 12rpx rgba(139, 92, 246, 0.15);
}

.menu-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.menu-text {
  flex: 1;
  font-size: 24rpx;
  font-weight: 600;
  color: #2d1b4e;
}

.menu-arrow {
  color: #d1d5db;
  font-size: 22rpx;
  font-weight: 300;
}

/* 统计信息 */
.statistics-section {
  margin-bottom: 30rpx;
}

.statistics-section .section-title {
  margin-bottom: 16rpx;
  padding-left: 10rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.stat-card {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(139, 92, 246, 0.08);
  border: 2rpx solid #f3e8ff;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #8b5cf6;
}

.stat-name {
  display: block;
  font-size: 20rpx;
  color: #9ca3af;
  font-weight: 500;
}

/* 底部操作 */
.footer-section {
  display: flex;
  justify-content: center;
  padding-top: 20rpx;
}

.logout-btn {
  background: #fee2e2;
  color: #dc2626;
  border: 2rpx solid #fecaca;
  border-radius: 12rpx;
  padding: 14rpx 48rpx;
  font-size: 24rpx;
  font-weight: 600;
  width: 100%;
  max-width: 300rpx;
  transition: all 0.3s ease;
}

.logout-btn:active {
  background: #fecaca;
}
