/* pages/daily-task/daily-task.wxss */
.container {
  min-height: 100vh;
  padding: 20rpx 20rpx 40rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding:16rpx 0;
}

.page-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #4c1d95;
  letter-spacing: -0.5rpx;
  position: relative;
  display: inline-block;
}

.page-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 10%;
  width: 80%;
  height: 3rpx;
  background: linear-gradient(90deg, transparent, #8b5cf6, transparent);
}

/* 积分概览卡片 - 缺角风格 */
.points-card {
  background: linear-gradient(145deg, #ffffff 0%, #f9f5ff 100%);
  margin: 10rpx 10rpx 40rpx;
  padding: 50rpx 30rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.08),
              0 4rpx 8rpx rgba(0, 0, 0, 0.06);
  position: relative;
  display: flex;
  justify-content: space-around;
  align-items: center;
  overflow: visible;
  /* 缺角效果 */
  clip-path: polygon(
    0 0, 
    calc(100% - 40rpx) 0, 
    100% 40rpx, 
    100% 100%, 
    40rpx 100%, 
    0 calc(100% - 40rpx)
  );
}

/* 左上角装饰元素 */
.points-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, transparent 50%, #8b5cf6 50%);
  z-index: 1;
}

/* 右下角装饰元素 */
.points-card::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(315deg, transparent 50%, #8b5cf6 50%);
  z-index: 1;
}

.current-points, .today-earned {
  text-align: center;
  flex: 1;
}

.points-label, .earned-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.points-value, .earned-value {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #4c1d95;
}

/* 任务区域 */
.task-section {
  background: linear-gradient(145deg, #ffffff 0%, #f9f5ff 100%);
  margin: 10rpx 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.08),
              0 4rpx 8rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: visible;
}


.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  z-index: 2;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.completion-rate {
  font-size: 28rpx;
  color: #8b5cf6;
  font-weight: 500;
}

/* 任务列表 */
.task-list {
  padding: 0 32rpx;
  position: relative;
  z-index: 2;
}

.task-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 22rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.task-item:last-child {
  border-bottom: none;
}

.task-content {
  flex: 1;
}

.task-name {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.task-reward {
  font-size: 26rpx;
  color: #ff6b35;
  font-weight: 500;
}

/* 任务按钮 - 缺角风格 */
.task-btn {
  padding: 14rpx 40rpx;
  background: #8b5cf6;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  /* 按钮缺角 */
  clip-path: polygon(
    0 0, 
    calc(100% - 12rpx) 0, 
    100% 12rpx, 
    100% 100%, 
    12rpx 100%, 
    0 calc(100% - 12rpx)
  );
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.3);
}

.task-btn.completed {
  background: #e0d6ff;
}

.btn-text {
  font-size: 26rpx;
  color: white;
  font-weight: 500;
}

.task-btn.completed .btn-text {
  color: #7e7e8f;
}

.task-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s ease;
}

.task-btn:active::before {
  left: 100%;
}

.task-btn:active {
  transform: scale(0.96);
}

/* 提示信息 */
.toast-message {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(139, 92, 246, 0.9);
  padding: 24rpx 48rpx;
  border-radius: 16rpx;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  backdrop-filter: blur(10rpx);
  /* 缺角效果 */
  clip-path: polygon(
    0 0, 
    calc(100% - 12rpx) 0, 
    100% 12rpx, 
    100% 100%, 
    12rpx 100%, 
    0 calc(100% - 12rpx)
  );
}

.toast-message.show {
  opacity: 1;
  visibility: visible;
}

.toast-text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}