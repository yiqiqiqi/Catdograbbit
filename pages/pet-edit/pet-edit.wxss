/* ========== å¤´åƒä¸Šä¼ æ ·å¼ï¼ˆä¼˜åŒ–äº¤äº’å’Œè§†è§‰ï¼‰ ========== */
.avatar-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
  cursor: pointer;
  position: relative;
  transition: all 0.3s ease;
  padding: 10rpx;
  border-radius: 50%;
}

.avatar-upload:hover {
  transform: translateY(-4rpx);
}

.avatar-container {
  position: relative;
  margin-bottom: 15rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 2rpx dashed #e2e8f0;
  object-fit: cover;
  background-color: #f8fafc;
  transition: all 0.3s ease;
}

.avatar-upload:hover .avatar {
  border-color: #8b5cf6;
  box-shadow: 0 0 0 8rpx rgba(139, 92, 246, 0.08);
}

/* ç›¸æœºå›¾æ ‡ï¼ˆæ–°å¢è£…é¥°ï¼‰ */
.camera-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(139, 92, 246, 0.3);
  border: 4rpx solid #ffffff;
  transition: all 0.2s ease;
}

.avatar-upload:active .camera-icon {
  transform: scale(0.9);
  box-shadow: 0 1rpx 4rpx rgba(139, 92, 246, 0.3);
}

.avatar-text {
  font-size: 24rpx;
  color: #94a3b8;
  font-weight: 500;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
}

.avatar-text::before {
  content: 'ğŸ“·';
  margin-right: 8rpx;
  font-size: 26rpx;
}

.avatar-upload:active .avatar-text {
  color: #8b5cf6;
  transform: scale(0.98);
}

/* ========== è¡¨å•é¡¹é€šç”¨æ ·å¼ï¼ˆä¼˜åŒ–ç»†èŠ‚ï¼‰ ========== */
.form-item {
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

/* æ ‡ç­¾æ ·å¼ï¼ˆå¢åŠ æ¸å˜å’Œè£…é¥°ï¼‰ */
.label {
  font-size: 26rpx;
  color: #334155;
  font-weight: 500;
  margin-bottom: 12rpx;
  display: block;
  position: relative;
  padding-left: 8rpx;
}

.label::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 24rpx;
  background: linear-gradient(180deg, #8b5cf6 0%, #6366f1 100%);
  border-radius: 2rpx;
}

/* å¿…å¡«é¡¹æ ‡è®°ï¼ˆä¼˜åŒ–æ ·å¼ï¼‰ */
.label.required::after {
  content: '*';
  color: #ef4444;
  margin-left: 6rpx;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.1);
  }
}

/* è¾“å…¥æ¡†æ ·å¼ï¼ˆå¢å¼ºè´¨æ„Ÿï¼‰ */
.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #334155;
  background-color: #f8fafc;
  transition: all 0.2s ease;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.01);
}

.input:focus {
  border-color: #8b5cf6;
  background-color: #ffffff;
  box-shadow: 0 0 0 6rpx rgba(139, 92, 246, 0.12), inset 0 0 0 1rpx rgba(139, 92, 246, 0.2);
  outline: none;
  transform: translateY(-1rpx);
}

.input::placeholder {
  color: #94a3b8;
  font-weight: 400;
  font-style: italic;
}

/* é”™è¯¯æç¤ºæ ·å¼ï¼ˆä¼˜åŒ–åŠ¨ç”»ï¼‰ */
.error {
  font-size: 22rpx;
  color: #ef4444;
  margin-top: 10rpx;
  line-height: 1.4;
  animation: shakeAndFade 0.4s ease;
  display: flex;
  align-items: center;
}

.error::before {
  margin-right: 8rpx;
  font-size: 24rpx;
}

@keyframes shakeAndFade {
  0% {
    opacity: 0;
    transform: translateY(-8rpx) translateX(-4rpx);
  }
  25% {
    transform: translateY(-8rpx) translateX(4rpx);
  }
  50% {
    transform: translateY(-8rpx) translateX(-4rpx);
  }
  75% {
    transform: translateY(-8rpx) translateX(4rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0) translateX(0);
  }
}

/* ========== é€‰æ‹©å™¨æ ·å¼ï¼ˆå¢å¼ºäº¤äº’ï¼‰ ========== */
.picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #334155;
  background-color: #f8fafc;
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.01);
}

.picker:hover {
  border-color: #cbd5e1;
  background-color: #f1f5f9;
  transform: translateY(-1rpx);
}

.picker:focus-within {
  border-color: #8b5cf6;
  box-shadow: 0 0 0 6rpx rgba(139, 92, 246, 0.12);
}

/* é€‰æ‹©å™¨å³ä¾§ç®­å¤´ï¼ˆä¼˜åŒ–æ ·å¼ï¼‰ */
.picker::after {
  content: '';
  width: 18rpx;
  height: 18rpx;
  border-top: 3rpx solid #94a3b8;
  border-right: 3rpx solid #94a3b8;
  transform: rotate(45deg);
  transition: all 0.2s ease;
}

.picker:hover::after {
  border-color: #64748b;
  transform: rotate(45deg) translateY(2rpx);
}

.picker:active::after {
  border-color: #8b5cf6;
  transform: rotate(45deg) scale(0.9);
}

/* é€‰æ‹©å™¨å½“å‰å€¼æ ·å¼ */
.picker-value {
  transition: all 0.2s ease;
}

.picker:active .picker-value {
  color: #8b5cf6;
}

/* ========== å•é€‰é€‰é¡¹ç»„ï¼ˆæ€§åˆ«/ç»è‚²ï¼‰ ========== */
.option-group {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.option-group--wide {
  gap: 30rpx;
}

.option-item {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  background-color: #f8fafc;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.01);
  position: relative;
  overflow: hidden;
}

.option-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.05) 0%, transparent 50%);
  opacity: 0;
  transition: opacity 0.2s ease;
}

.option-item:not(.active):hover {
  border-color: #cbd5e1;
  background-color: #f1f5f9;
  transform: translateY(-2rpx);
}

.option-item.active {
  border-color: #8b5cf6;
  background-color: rgba(139, 92, 246, 0.08);
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.15), inset 0 0 0 1rpx rgba(139, 92, 246, 0.2);
  transform: translateY(-2rpx);
}

.option-item.active::before {
  opacity: 1;
}

/* å•é€‰æŒ‰é’®åœ†ç‚¹ï¼ˆä¼˜åŒ–åŠ¨ç”»ï¼‰ */
.radio-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 2rpx solid #cbd5e1;
  margin-right: 12rpx;
  position: relative;
  flex-shrink: 0;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  background-color: #ffffff;
}

.option-item.active .radio-dot {
  border-color: #8b5cf6;
  background-color: #8b5cf6;
  transform: scale(1.15);
  box-shadow: 0 0 0 4rpx rgba(139, 92, 246, 0.2);
}

.option-item.active .radio-dot::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.6);
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #ffffff;
  animation: radioPulse 0.3s ease forwards;
}

@keyframes radioPulse {
  0% {
    transform: translate(-50%, -50%) scale(0);
    opacity: 0;
  }
  70% {
    transform: translate(-50%, -50%) scale(0.7);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(0.6);
    opacity: 1;
  }
}

/* é€‰é¡¹æ–‡æœ¬ */
.option-label {
  font-size: 26rpx;
  color: #64748b;
  transition: all 0.2s ease;
  font-weight: 400;
}

.option-item.active .option-label {
  color: #8b5cf6;
