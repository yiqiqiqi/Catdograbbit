  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03), 0 2rpx 6rpx rgba(0, 0, 0, 0.02);
  margin-bottom: 30rpx;
  position: relative;
