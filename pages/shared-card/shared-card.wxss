/* 分享视图样式 */
.shared-view {
  width: 100%;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 分享视图头部样式 */
.shared-view-header {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
}
.shared-view-content{
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.header-content {
  display: flex;
  align-items: center;
}

.pet-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #f0f0f0;
  margin-right: 20rpx;
}

.pet-info {
  display: flex;
  flex-direction: column;
}

.pet-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.create-time {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.2;
}

/* 分享卡片内容样式 */
/* 单张媒体容器 */
.media-container.single-media {
  width: 100%;
  margin-top: 20rpx;
}
/* 单张媒体项 */
.media-container.single-media .single-item {
  width: 100%;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

/* 单张图片 - 等比例缩放 */
.media-container.single-media .single-image {
  width: 100%;
  display: block;
  object-fit: contain; /* 确保完整显示 */
  max-height: 600rpx; /* 设置最大高度，避免过长 */
  min-height: 200rpx; /* 设置最小高度 */
}

/* 单张视频 - 等比例缩放 */
.media-container.single-media .single-video {
  width: 100%;
  max-height: 600rpx;
  min-height: 200rpx;
  display: block;
}

/* 多张媒体网格 */
.media-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

/* 网格项 - 等比例正方形 */
.media-grid .grid-item {
  width: 100%;
  aspect-ratio: 1; /* 保持正方形 */
  position: relative;
  overflow: hidden;
  background: #f5f5f5;
}

/* 网格图片 - 裁剪填充 */
.media-grid .grid-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 裁剪填充 */
}

/* 网格视频 */
.media-grid .grid-video {
  width: 100%;
  height: 100%;
  background: #000;
}

/* 视频时长标签 */
.video-duration {
  position: absolute;
  right: 8rpx;
  bottom: 8rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

/* 根据图片数量调整网格布局 */
.media-grid[data-count="2"] {
  grid-template-columns: repeat(2, 1fr);
}

.media-grid[data-count="4"] {
  grid-template-columns: repeat(2, 1fr);
}



.media-item {
  position: relative;
  overflow: hidden;
  border-radius: 8rpx;
}

.media-content {
  width: 100%;
  display: block;
  
}

/* 4张图片特殊布局：2x2 */
.media-grid[data-count="4"] {
  grid-template-columns: repeat(2, 1fr);
}
/* 4张时恢复正方形比例 */
.media-grid[data-count="4"] .media-item {
  aspect-ratio: 1 / 1;
}

/* 视频相关样式 */
.video-item {
  position: relative;
  /* 视频继承宽高比 */
  aspect-ratio: inherit;
}

.video {
  width: 100%;
  height: 100%;
  display: block;
  background: #000;
  object-fit: cover; /* 视频可裁剪，保证填充 */
}

.video-play-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

.play-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 4rpx;
}

.video-duration {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  z-index: 2;
}

/* 视频比例适配 */
.media-grid[data-type="video"][data-count="1"] .video-item {
  aspect-ratio: 16 / 9; /* 视频用16:9更符合习惯 */
}
.media-grid[data-type="video"][data-count="2"] .video-item {
  aspect-ratio: 1 / 1;
}
.media-grid[data-type="video"][data-count="3"] .video-item,
.media-grid[data-type="video"][data-count="4"] .video-item,
.media-grid[data-type="video"][data-count="5"] .video-item {
  aspect-ratio: 1 / 1;
}


/* 加载状态样式 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-top: 40rpx;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
  margin-top: 20rpx;
}

/* 错误状态样式 */
.error-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-top: 40rpx;
}

.error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.error-text {
  font-size: 28rpx;
  color: #ff4444;
  margin-bottom: 40rpx;
  text-align: center;
  padding: 0 40rpx;
}

.retry-btn {
  width: 240rpx;
  height: 72rpx;
  background-color: #07c160;
  color: #ffffff;
  border-radius: 36rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  outline: none;
}

.retry-btn:active {
  background-color: #06ae56;
  opacity: 0.9;
}

/* 图片预览效果优化 */
.shared-photo {
  cursor: pointer;
  -webkit-tap-highlight-color: transparent;
}

.shared-photo:active {
  opacity: 0.9;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .single-photo-container {
    height: 400rpx;
  }
  
  .photo-grid {
    gap: 6rpx;
  }
}

/* 暗色模式适配 */
@media (prefers-color-scheme: dark) {
  .shared-view {
    background-color: #121212;
  }
  
  .shared-view-header,
  .shared-view-content,
  .loading-state,
  .error-state {
    background-color: #1e1e1e;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  }
  
  .pet-name {
    color: #e0e0e0;
  }
  
  .create-time {
    color: #888888;
  }
  
  .description {
    color: #e0e0e0;
  }
  
  .single-photo-container,
  .photo-grid-item {
    background-color: #2a2a2a;
  }
  
  .loading-text {
    color: #888888;
  }
  
  .error-text {
    color: #ff6b6b;
  }
}