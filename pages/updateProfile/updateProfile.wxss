/* pages/updateProfile/updateProfile.wxss */
.update-profile-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 状态栏占位 */
.status-bar {
  height: var(--status-bar-height);
  width: 100%;
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  padding: 40rpx 30rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
  text-align: center;
}

/* 通用卡片样式 */
.section-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 30rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 区域标题 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 头像上传区域 */
.avatar-section {
  margin-top: 20rpx;
}

.avatar-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
  background-color: #f8f9fa;
  border: 4rpx solid #f1f3f4;
  margin: 0 auto;
  padding: 0;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.avatar-wrapper:hover .avatar-overlay,
.avatar-wrapper:active .avatar-overlay {
  opacity: 1;
}

.avatar-text {
  color: #ffffff;
  font-size: 24rpx;
}

/* 表单项目 */
.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  min-width: 160rpx;
}

.form-input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #333333;
  padding: 0 20rpx;
}

.form-input::placeholder {
  color: #999999;
}

/* 选择器样式 */
.picker-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.picker-text {
  font-size: 30rpx;
  color: #333333;
}

.picker-text.placeholder {
  color: #999999;
}

.picker-arrow {
  font-size: 36rpx;
  color: #cbd5e1;
  transform: rotate(90deg);
}

/* 经验选择器 */
.experience-selector {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.experience-option {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
  margin: 0 5rpx;
  border-radius: 10rpx;
  background-color: #f8f9fa;
  font-size: 26rpx;
  color: #666666;
  transition: all 0.2s;
}

.experience-option.active {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  color: #ffffff;
  font-weight: 500;
}

.experience-option:active {
  background-color: #f1f3f4;
}

.experience-option.active:active {
  background: linear-gradient(135deg, #7c3aed 0%, #6d28d9 100%);
}

/* 按钮区域 */
.button-section {
  padding: 40rpx 30rpx;
}

.submit-btn {
  width: 100%;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(139, 92, 246, 0.3);
  transition: all 0.3s;
}

.submit-btn:active {
  transform: translateY(4rpx) scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.4);
}

.submit-btn[disabled] {
  background: linear-gradient(135deg, #c4b5fd 0%, #a78bfa 100%);
  color: rgba(255, 255, 255, 0.7);
  box-shadow: none;
  transform: none;
}