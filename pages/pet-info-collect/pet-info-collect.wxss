/* 步骤内容 */
.step-content {
  min-height: 100%;
}

.step-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 80rpx;
  color: #a885f8;
  text-align: center;
}

/* 表单区域 */
.form-item {
  padding: 40rpx;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  transition: all 0.3s;
}

.form-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.05);
}

.form-label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.required {
  color: #ff4444;
  margin-left: 10rpx;
  font-size: 28rpx;
}

/* 步骤1：上传头像 */
.upload-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-container {
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  background: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx dashed #e0e0e0;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.avatar-container:active {
  opacity: 0.8;
}

.pet-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.camera-icon {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.5;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

/* 姓名输入 */
.name-input {
  font-size: 36rpx;
  color: #333;
  padding: 30rpx 20rpx;
  border: 4rpx solid #7c3aed;
  border-radius: 25rpx;
  height: 80rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(139, 92, 246, 0.3);
  text-align: center;
}

.name-input:focus {
  border-bottom-color: #8b5cf6;
}

/* 宠物种类选择器 */
.type-selector {
  margin: 20rpx;
}

.type-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
}

.type-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  background: #fff;
  border-radius: 24rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

.type-card:active {
  transform: scale(0.98);
}

.type-card.active {
  border-color: #8b5cf6;
  background: rgba(139, 92, 246, 0.1);
  box-shadow: 0 8rpx 25rpx rgba(139, 92, 246, 0.2);
}

.type-icon {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 25rpx;
}

.type-name {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

.type-card.active .type-name {
  color: #8b5cf6;
}
/* 第二步：宠物种类和生日 */

/* 种类标签 */
.type-label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

