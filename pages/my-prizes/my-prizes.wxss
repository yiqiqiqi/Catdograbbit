/* pages/my-prizes/my-prizes.wxss */
.container {
  min-height: 100vh;
  padding: 20rpx 20rpx 40rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 16rpx 0 30rpx;
}

.page-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #4c1d95;
  letter-spacing: -0.5rpx;
  position: relative;
  display: inline-block;
}

.page-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 10%;
  width: 80%;
  height: 3rpx;
  background: linear-gradient(90deg, transparent, #8b5cf6, transparent);
}

/* 加载状态 */
.loading-container {
  padding: 100rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 奖品列表 */
.prizes-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 0 10rpx;
}

/* 奖品卡片 */
.prize-card {
  background: linear-gradient(145deg, #ffffff 0%, #f9f5ff 100%);
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  position: relative;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.08),
              0 4rpx 8rpx rgba(0, 0, 0, 0.06);
  overflow: visible;
  /* 缺角效果 */
  clip-path: polygon(
    0 0,
    calc(100% - 30rpx) 0,
    100% 30rpx,
    100% 100%,
    30rpx 100%,
    0 calc(100% - 30rpx)
  );
}

/* 装饰角 */
.decorative-corner {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  z-index: 1;
}

.decorative-corner.top-left {
  top: 0;
  left: 0;
  background: linear-gradient(135deg, transparent 50%, #8b5cf6 50%);
  opacity: 0.3;
}

.decorative-corner.bottom-right {
  bottom: 0;
  right: 0;
  background: linear-gradient(315deg, transparent 50%, #8b5cf6 50%);
  opacity: 0.3;
}

/* 奖品图标 */
.prize-icon-wrapper {
  flex-shrink: 0;
  width: 100rpx;
  height: 100rpx;
  background: rgba(139, 92, 246, 0.1);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

.prize-icon {
  font-size: 60rpx;
}

/* 奖品信息 */
.prize-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  z-index: 2;
}

.prize-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.prize-time {
  font-size: 24rpx;
  color: #999;
}

.prize-expire {
  font-size: 24rpx;
  color: #ff6b6b;
}

/* 操作按钮 */
.prize-action {
  flex-shrink: 0;
  z-index: 2;
}

.status-btn {
  min-width: 120rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.status-btn.available {
  background: linear-gradient(135deg, #a78bfa, #8b5cf6);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(139, 92, 246, 0.3);
}

.status-btn.available:active {
  transform: scale(0.95);
}

.status-btn.used {
  background: #e0e0e0;
  color: #999;
}

.status-btn.expired {
  background: #ffe0e0;
  color: #ff6b6b;
}

/* 空状态 */
.empty-container {
  padding: 100rpx 30rpx;
}

.empty-card {
  background: linear-gradient(145deg, #ffffff 0%, #f9f5ff 100%);
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.08);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  width: 300rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #a78bfa, #8b5cf6);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.3);
  transition: all 0.3s ease;
}

.empty-btn:active {
  transform: scale(0.95);
}

/* 核销码弹窗 */
.redeem-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.redeem-modal.show {
  opacity: 1;
  pointer-events: auto;
}

.modal-content {
  width: 100%;
  padding: 0 60rpx;
}

.modal-card {
  background: linear-gradient(145deg, #ffffff 0%, #f9f5ff 100%);
  padding: 60rpx 40rpx;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  clip-path: polygon(
    0 0,
    calc(100% - 30rpx) 0,
    100% 30rpx,
    100% 100%,
    30rpx 100%,
    0 calc(100% - 30rpx)
  );
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #4c1d95;
  margin-bottom: 40rpx;
}

.prize-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.prize-icon-large {
  font-size: 100rpx;
  margin-bottom: 16rpx;
}

.prize-name-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.redeem-code-display {
  background: rgba(139, 92, 246, 0.1);
  padding: 30rpx 60rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  border: 2rpx dashed #8b5cf6;
}

.code-text {
  font-size: 40rpx;
  font-weight: 700;
  color: #8b5cf6;
  letter-spacing: 4rpx;
}

.modal-tip {
  font-size: 26rpx;
  color: #7e7e8f;
  margin-bottom: 40rpx;
}

.modal-btn {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.modal-btn.primary {
  background: linear-gradient(135deg, #a78bfa, #8b5cf6);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.3);
}

.modal-btn:active {
  transform: scale(0.95);
}
