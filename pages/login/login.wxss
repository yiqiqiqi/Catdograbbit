.container {
  background: linear-gradient(180deg, #efefff 0%, #fdf0ff 50%, #f8f8f8 100%);
  min-height: 100vh;
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}
/* å® ç‰©Logoæ ·å¼ */
.pet-logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 42rpx;
  margin-bottom: 48rpx;
  /* background: linear-gradient(135deg, #93c5fd 0%, #fbcfe8 50%, #fde68a 100%); */
  border: 6rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 
    0 12rpx 32rpx rgba(147, 197, 253, 0.25),
    inset 0 4rpx 12rpx rgba(255, 255, 255, 0.8);
  animation: logoFloat 4s ease-in-out infinite;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
  transition: transform 0.3s ease;
}

.pet-logo::before {
  /* content: 'ğŸ¾'; */
  font-size: 72rpx;
  opacity: 0.9;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.pet-logo:active {
  transform: scale(0.95);
  animation-play-state: paused;
}

/* Logoæµ®åŠ¨åŠ¨ç”» */
@keyframes logoFloat {
  0%, 100% {
    transform: translateY(0) rotate(0deg) scale(1);
    box-shadow: 
      0 12rpx 32rpx rgba(147, 197, 253, 0.25),
      inset 0 4rpx 12rpx rgba(255, 255, 255, 0.8);
  }
  25% {
    transform: translateY(-12rpx) rotate(-2deg) scale(1.02);
    box-shadow: 
      0 16rpx 40rpx rgba(147, 197, 253, 0.35),
      inset 0 4rpx 12rpx rgba(255, 255, 255, 0.9);
  }
  50% {
    transform: translateY(-24rpx) rotate(0deg) scale(1.05);
    box-shadow: 
      0 20rpx 48rpx rgba(147, 197, 253, 0.4),
      inset 0 4rpx 12rpx rgba(255, 255, 255, 1);
  }
  75% {
    transform: translateY(-12rpx) rotate(2deg) scale(1.02);
    box-shadow: 
      0 16rpx 40rpx rgba(147, 197, 253, 0.35),
      inset 0 4rpx 12rpx rgba(255, 255, 255, 0.9);
  }
}

