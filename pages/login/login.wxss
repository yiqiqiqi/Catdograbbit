.btn-primary, .btn-secondary {
  width: 100%;
  height: 104rpx;
  border-radius: 60rpx;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  transform: translateZ(0);
  will-change: transform;
  box-shadow: 
    0 10rpx 30rpx rgba(0, 0, 0, 0.1),
    0 1rpx 3rpx rgba(0, 0, 0, 0.08);
}

/* ä¸»è¦æŒ‰é’® - å¾®ä¿¡ç™»å½• */
.btn-primary {
  background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
  color: #ffffff;
}

.btn-primary::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, transparent 50%);
  border-radius: 60rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.btn-primary:active::after {
  opacity: 1;
}

.btn-primary:active {
  transform: translateY(6rpx) scale(0.97);
  box-shadow: 
    0 4rpx 16rpx rgba(59, 130, 246, 0.3),
    0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* æ¬¡è¦æŒ‰é’® - æ‰‹æœºå·ç™»å½• */
