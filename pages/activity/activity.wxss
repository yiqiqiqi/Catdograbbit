/* pages/activity/activity.wxss */

.container {
  min-height: 100vh;
}

/* 筛选栏 */
.filter-bar {
  background: #fff;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-tabs {
  display: flex;
  background: #f8f8f8;
  border-radius: 50rpx;
  padding: 8rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: #ff6b9c;
  color: #fff;
  font-weight: bold;
}

/* 活动列表 */
.activities-list {
  /* padding: 30rpx; */
}

.activity-item {
  margin-bottom: 40rpx;
  overflow: hidden;
}

/* 活动封面 */
.activity-cover {
  position: relative;
  height: 400rpx;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, transparent 60%, rgba(0,0,0,0.6));
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 30rpx;
}

.activity-status {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
}

.activity-status.open {
  background: #2ed573;
}

.activity-status.closed {
  background: #ffa502;
}

.activity-status.ended {
  background: #747d8c;
}

.activity-stats {
  display: flex;
  gap: 20rpx;
}

.stat {
  font-size: 24rpx;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

/* 活动信息 */
.activity-info {
  padding: 30rpx;
}

.activity-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.activity-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.3;
  margin-right: 20rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #ffa502;
  font-weight: bold;
}

.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.meta-icon {
  font-size: 24rpx;
  width: 40rpx;
}

.meta-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.activity-description {
  margin-bottom: 30rpx;
}

.description-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #555;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 操作按钮 */
.activity-actions {
  display: flex;
  gap: 20rpx;
}

.btn-detail {
  flex: 1;
  background: #f8f8f8;
  color: #333;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.btn-join {
  flex: 1;
  background: #ff6b9c;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-join.disabled {
  background: #ccc;
  color: #999;
}

.btn-join.joined {
  background: #2ed573;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 200rpx 40rpx;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}

.empty-subtext {
  font-size: 24rpx;
  color: #ddd;
}

/* 悬浮操作按钮 */
.fab-container {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  z-index: 1000;
}

.fab {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ffa502, #ffb142);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(255, 165, 2, 0.4);
  transition: all 0.3s ease;
}

.fab-hover {
  transform: scale(1.1);
}

.fab-icon {
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.fab-text {
  color: #fff;
  font-size: 20rpx;
}