/* pages/record-edit/record-edit.wxss */

.container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 头部操作栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 0 30rpx;
  height: 88rpx;
  border-bottom: 2rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.btn-cancel, .btn-save {
  background: none;
  border: none;
  font-size: 32rpx;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  line-height: 1;
}

.btn-cancel {
  color: #666;
}

.btn-save {
  color: #ff6b9c;
  font-weight: bold;
}

.btn-save.disabled {
  color: #ccc;
}

/* 主要内容 */
.main-content {
  padding: 30rpx;
}

/* 通用区块样式 */
.section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

/* 宠物选择器 */
.pet-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.pet-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 20rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.pet-item.active {
  border-color: #ff6b9c;
  background: rgba(255, 107, 156, 0.05);
}

.pet-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
}

.pet-name {
  font-size: 24rpx;
  color: #333;
}

.pet-item.active .pet-name {
  color: #ff6b9c;
  font-weight: bold;
}

/* 类型选择器 */
.type-list {
  display: flex;
  gap: 20rpx;
}

.type-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.type-item.active {
  border-color: #ff6b9c;
  background: rgba(255, 107, 156, 0.05);
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.type-name {
  font-size: 28rpx;
  color: #333;
}

.type-item.active .type-name {
  color: #ff6b9c;
  font-weight: bold;
}

/* 健康类型选择器 */
.health-picker, .activity-picker {
  width: 100%;
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 30rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  background: #fafafa;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 内容输入区域 */
.content-input {
  position: relative;
}

.content-textarea {
  width: 100%;
  min-height: 300rpx;
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
  padding: 0;
}

.content-textarea .placeholder {
  color: #ccc;
  font-size: 32rpx;
}

.word-count {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  font-size: 24rpx;
  color: #999;
  background: rgba(255, 255, 255, 0.9);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 图片上传区域 */
.image-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 16rpx;
  overflow: hidden;
  background: #f8f8f8;
}

.image-preview {
  width: 100%;
  height: 100%;
}

.image-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.add-image {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
  background: #fafafa;
  transition: all 0.3s ease;
}

.add-image:active {
  background: #f0f0f0;
}

.add-icon {
  font-size: 48rpx;
  color: #ccc;
  margin-bottom: 15rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: #fff;
  padding: 60rpx 80rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f0f0f0;
  border-top: 6rpx solid #ff6b9c;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}