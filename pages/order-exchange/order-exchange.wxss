.exchange-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 头部卡片 */
.header-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 50rpx 30rpx;
  color: #fff;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.header-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 表单区域 */
.form-section {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #ff4d4f;
  margin-right: 5rpx;
}

/* 平台选择 */
.platform-options {
  display: flex;
  gap: 20rpx;
}

.platform-option {
  flex: 1;
  background-color: #fff;
  border: 2rpx solid #e5e5e5;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
  transition: all 0.3s;
}

.platform-option.active {
  border-color: #8b5cf6;
  background-color: #f5f3ff;
}

.platform-icon {
  width: 60rpx;
  height: 60rpx;
}

.platform-name {
  font-size: 26rpx;
  color: #666;
}

.platform-option.active .platform-name {
  color: #8b5cf6;
  font-weight: bold;
}

/* 输入框 */
.form-input {
  background-color: #fff;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 25rpx 20rpx;
  font-size: 28rpx;
}

.form-tip {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 包数选择 */
.package-options {
  display: flex;
  gap: 15rpx;
}

.package-option {
  flex: 1;
  background-color: #fff;
  border: 2rpx solid #e5e5e5;
  border-radius: 16rpx;
  padding: 25rpx 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s;
}

.package-option.active {
  border-color: #8b5cf6;
  background-color: #f5f3ff;
}

.package-num {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.package-option.active .package-num {
  color: #8b5cf6;
}

.package-spec {
  font-size: 22rpx;
  color: #999;
}

/* 积分预览 */
.points-preview {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.preview-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.preview-detail {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx dashed #e5e5e5;
}

.preview-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.preview-label {
  font-size: 26rpx;
  color: #666;
}

.preview-value {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.preview-value.bonus {
  color: #ff6b6b;
}

.preview-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.total-value {
  font-size: 36rpx;
  color: #8b5cf6;
  font-weight: bold;
}

/* 首单提示 */
.first-order-tip {
  background: linear-gradient(135deg, #fff5f5 0%, #ffe5e5 100%);
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-top: 20rpx;
}

.tip-icon {
  font-size: 40rpx;
}

.tip-text {
  flex: 1;
  font-size: 24rpx;
  color: #ff6b6b;
  line-height: 1.5;
}

/* 提交按钮 */
.submit-section {
  padding: 0 30rpx 30rpx;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn[disabled] {
  opacity: 0.6;
}

/* 兑换规则 */
.rules-section {
  margin: 0 30rpx 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.rules-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.rule-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
  line-height: 1.6;
}

.rule-dot {
  color: #8b5cf6;
  margin-right: 10rpx;
  font-size: 26rpx;
}

.rule-text {
  flex: 1;
  font-size: 24rpx;
  color: #666;
}

/* 历史记录链接 */
.history-link {
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  text-align: center;
  font-size: 28rpx;
  color: #8b5cf6;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
}

.arrow {
  font-size: 28rpx;
}

.bottom-placeholder {
  height: 100rpx;
}
