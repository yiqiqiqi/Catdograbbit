page {
  background: linear-gradient(to bottom, #f0efff, #e6e0ff);
  background-attachment: fixed;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  min-height: 100vh;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 删除复杂的 ::after 伪元素，简化背景 */

/* 通用组件样式 */
.container {
  padding: 16rpx;
  box-sizing: border-box;
}

.card {
  background: white;
  border-radius: 32rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.btn-primary {
  background-color: #7a6cf0;
  color: white;
  border-radius: 40rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  margin: 40rpx 0;
  border: none;
}

.btn-secondary {
  border: 2rpx solid #7a6cf0;
  color: #7a6cf0;
  border-radius: 40rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  margin: 40rpx 0;
  background: white;
}

.input-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-control {
  height: 90rpx;
  border: 2rpx solid #eee;
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background: white;
}

/* 字体大小 */
.font-xs { font-size: 24rpx; }
.font-sm { font-size: 28rpx; }
.font-md { font-size: 32rpx; }
.font-lg { font-size: 36rpx; }
.font-xl { font-size: 40rpx; }

/* 颜色 */
.color-primary { color: #7a6cf0; }
.color-gray { color: #999; }
.color-dark { color: #333; }
.color-white { color: #fff; }

/* Flex布局辅助类 */
.flex { display: flex; }
.justify-between { justify-content: space-between; }
.justify-center { justify-content: center; }
.align-center { align-items: center; }
.flex-column { flex-direction: column; }

/* 建议补充的常用工具类 */
.text-center { text-align: center; }
.mt-16 { margin-top: 16rpx; }
.mb-16 { margin-bottom: 16rpx; }
.p-24 { padding: 24rpx; }