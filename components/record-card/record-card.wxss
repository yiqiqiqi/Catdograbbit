/* 卡片容器 */
.record-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 25rpx;
  margin: 0 25rpx 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 记录时间 */
.record-time {
  font-size: 24rpx;
  color: #999999;
}

/* 记录类型（不同类型不同颜色） */
.record-type {
  font-size: 22rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}
.record-type.diary {
  background-color: #ffe6ed;
  color: #ff6b9c;
}
.record-type.health {
  background-color: #e6f7ee;
  color: #4caf50;
}
.record-type.activity {
  background-color: #e6f3ff;
  color: #2196f3;
}

/* 卡片内容 */
.card-content {
  margin-bottom: 15rpx;
}

/* 记录文本 */
.record-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 45rpx;
  margin-bottom: 20rpx;
  word-break: break-all;
}

/* 图片列表 */
.image-list {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}
.image-item {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.image-item image {
  width: 100%;
  height: 100%;
}

/* 图片数量提示 */
.image-count {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 操作区 */
.card-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #eeeeee;
}
.action-btn {
  padding: 5rpx 15rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}
.edit-btn {
  color: #2196f3;
  background-color: transparent;
}
.delete-btn {
  color: #f44336;
  background-color: transparent;
}